{
  "name": "wevibin-client",
  "version": "1.0.0",
  "description": "WeVibin' desktop client",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm:watch:*\"",
    "watch:main": "tsc -p src/main/tsconfig.json --watch",
    "watch:preload": "tsc -p src/preload/tsconfig.json --watch",
    "watch:renderer": "vite",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:preload": "tsc -p src/preload/tsconfig.json",
    "build:renderer": "vite build",
    "electron": "cross-env NODE_ENV=development electron .",
    "start": "npm run build && electron .",
    "type-check": "tsc -p src/main/tsconfig.json --noEmit && tsc -p src/preload/tsconfig.json --noEmit && tsc -p src/renderer/tsconfig.json --noEmit",
    "package": "npm run build && electron-builder --win --x64"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "framer-motion": "^12.23.26",
    "lucide-react": "^0.561.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.wevibin.app",
    "productName": "WeVibin",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}
