# Spotify API Credentials
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Database Configuration
# MongoDB Connection String (e.g., mongodb://localhost:27017/wevibin)
MONGODB_URI=mongodb://localhost:27017/wevibin

# Authentication
# Secret key for JWT signing (use a long random string)
JWT_SECRET=your_jwt_secret_here

# Observability (Optional)
# Sentry DSN for error tracking
SENTRY_DSN=
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Production
# Origins allowed to connect to Socket.IO (comma separated)
ALLOWED_ORIGINS=http://localhost:3000
